<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ghelani.kshamina.sssc_android_app.grades.GradesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coming_soon_logo"
            android:layout_width="130dp"
            android:layout_height="139dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_sssc" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="189dp"
            android:layout_height="88dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Grades calculator coming soon!"
            android:textColor="@color/logo_red"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="242dp"
            android:layout_height="83dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="We are currently working on developing the grade calculator. For now, you can use the excel sheet located on our website."
            android:textAlignment="center"
            android:textSize="16sp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/excel_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/logo_red"
            android:text="Excel Grade Calculator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:strokeColor="@color/logo_red"
            app:strokeWidth="2dp" />

    </LinearLayout>

</FrameLayout>