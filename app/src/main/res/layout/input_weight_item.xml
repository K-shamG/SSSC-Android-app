<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weightInputLayout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    android:visibility="visible">

    <EditText
        android:id="@+id/nameInputField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:background="@null"
        android:hint="Final Exam"
        android:textSize="18sp"
        android:focusable="true"
        android:imeOptions="actionNext"
        android:nextFocusDown="@id/valueInputField"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/inputDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/inputDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#E1E2E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/valueInputField"
        app:layout_constraintStart_toEndOf="@id/nameInputField"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/valueInputField"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="30%"
        android:imeOptions="actionNext"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inputDivider"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>