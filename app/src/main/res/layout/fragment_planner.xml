<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/planner_message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CGPATextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="@string/current_cgpa"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/currentCGPA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/current_cgpa_placeholder"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creditsCompleteTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="@string/credits_complete"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/creditsComplete"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:ems="10"
                android:hint="@string/credits_complete_placeholder"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/desiredCGPATextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="@string/desired_cgpa"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/desiredCGPA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:ems="10"
                android:hint="@string/desired_cgpa_placeholder"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/creditsProgressTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="@string/credits_progress"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/creditsProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:ems="10"
                android:hint="@string/credits_progress_placeholders"
                android:inputType="numberDecimal"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calculatedCGPAText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:text="@string/calculated_CGPA"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/calculatedCGPA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:ems="10"
                android:hint="@string/calculated_CGPA_placeholder"
                android:inputType="textPersonName"
                android:textAlignment="viewEnd" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>